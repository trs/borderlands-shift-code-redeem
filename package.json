{
  "name": "shift-code-redeemer",
  "version": "1.0.0",
  "description": "Redeem Borderlands SHiFT codes automatically",
  "main": "./src/bin/index.js",
  "bin": {
    "shift-code-redeemer": "./src/bin/index.js"
  },
  "files": [
    "bin",
    "src"
  ],
  "scripts": {
    "test:once": "jest",
    "test": "npm run test:once -- --watchAll",
    "build": "tsc",
    "prepkg": "rm -rf pkg",
    "pkg": "pkg ./package.json --out-path pkg",
    "postpkg": "cp -R ./node_modules/puppeteer/.local-chromium pkg/chromium"
  },
  "engines": {
    "node": ">= 10"
  },
  "keywords": [
    "borderlands",
    "shift",
    "code",
    "redeem"
  ],
  "pkg": {
    "targets": [
      "node10-macos",
      "node10-linux",
      "node10-win"
    ]
  },
  "author": "Tyler Stewart <hello@tylerstewart.ca>",
  "homepage": "https://github.com/trs/shift-code-redeemer",
  "repository": {
    "type": "git",
    "url": "git@github.com:trs/shift-code-redeemer.git"
  },
  "license": "MIT",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "rules": {
      "@typescript-eslint/indent": [
        "error",
        2
      ],
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "_"
        }
      ],
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/no-explicit-any": 0
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "release": {
    "branch": "master"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(\\.|/)spec\\.ts",
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/jest": "^24.0.18",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^12.7.4",
    "@types/prompts": "^2.0.1",
    "@types/slug": "^0.9.1",
    "@types/yargs": "^13.0.3",
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "eslint": "^6.3.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "pkg": "^4.4.0",
    "semantic-release": "^15.13.24",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.2"
  },
  "dependencies": {
    "mkdirp": "^0.5.1",
    "prompts": "^2.2.1",
    "shift-code-api": "0.0.9",
    "shift-code-observer": "0.0.3",
    "slug": "^1.1.0",
    "yargs": "^14.2.0"
  }
}
